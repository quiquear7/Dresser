<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"

        android:layout_height="410dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iButton1"
                android:layout_width="124dp"
                android:layout_height="105dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/todo"
                android:rotation="90"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tNombre1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iButton1"
                android:text=""
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/iButton2"
                android:layout_width="124dp"
                android:layout_height="105dp"
                android:layout_below="@+id/iButton1"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/todo"
                android:rotation="90"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tNombre2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="130dp"
                android:layout_toEndOf="@+id/iButton2"
                android:text=""
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/iButton3"
                android:layout_width="124dp"
                android:layout_height="105dp"
                android:layout_below="@+id/iButton2"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/todo"
                android:rotation="90"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />


            <TextView
                android:id="@+id/tNombre3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="220dp"
                android:layout_toEndOf="@+id/iButton3"
                android:text=""
                android:textSize="22sp" />
        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/confirmarOutfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="350dp"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:gravity="center"
            app:srcCompat="@drawable/ic_baseline_add_24" />

    </androidx.cardview.widget.CardView>




</LinearLayout>